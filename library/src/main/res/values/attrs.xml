<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AdvancedRecyclerView">
        <attr name="refreshHeaderClass" format="string" />
        <attr name="refreshFooterClass" format="string" />
        <attr name="contentMode" format="enum">
            <enum name="none" value="0" />
            <enum name="normal" value="1" />
            <enum name="sticky" value="2" />
            <enum name="swipe" value="3" />
            <enum name="drag" value="4" />
            <enum name="indexable" value="5" />
        </attr>
        <attr name="proxy" format="reference" />

        <attr name="slideBarTextColor" format="color" />
        <attr name="slideBarFocusTextColor" format="color" />
        <attr name="slideBarTextSize" format="dimension" />
        <attr name="slideBarFocusTextSize" format="dimension" />

        <attr name="itemDecoration" format="reference" />
    </declare-styleable>
</resources>